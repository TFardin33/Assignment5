<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Pizza Order"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Select Toppings:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/check_mushrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bercelona" />

        <CheckBox
            android:id="@+id/check_olives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="suprime" />

        <CheckBox
            android:id="@+id/check_pepperoni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dhakaiya" />

        <TextView
            android:text="Select Pizza Size:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/size_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Small" />

            <RadioButton
                android:id="@+id/radio_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium" />

            <RadioButton
                android:id="@+id/radio_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large" />
        </RadioGroup>

        <TextView
            android:text="Rate Spiciness Level:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0" />

        <TextView
            android:text="Adjust Cheese Quantity:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/cheese_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:id="@+id/cheese_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese Quantity: 0" />

        <TextView
            android:text="Choose Option:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Switch
            android:id="@+id/vegetarian_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarian" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Order"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment 3"
            android:layout_marginTop="40dp"
            android:background="@color/material_dynamic_neutral10"
            android:textColor="@android:color/white" />



    </LinearLayout>

</ScrollView>
